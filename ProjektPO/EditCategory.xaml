<Window x:Class="ProjektPO.EditCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektPO"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Closing="EditCategory_Closing"
        ResizeMode="NoResize"
        Title="Edit Category" Height="250" Width="300">
    <Grid Height="172" VerticalAlignment="Top" HorizontalAlignment="Right" Width="294">
        <TextBox x:Name="newName" Margin="32,67,22,75" BorderThickness="1" BorderBrush="Black" FontSize="18"/>
        <Button x:Name="confirm" Content="Confirm" Background="GhostWhite" BorderBrush="Black" FontSize="18" Margin="82,122,72,20" Click="ConfirmClick"/>
        <Button x:Name="return" Content="Return" Background="GhostWhite" BorderBrush="Black" FontSize="18" Margin="82,166,72,-24" Click="ReturnClick"/>
        <ComboBox  x:Name="categories"  Grid.ColumnSpan="2" Margin="92,24,82,0" VerticalAlignment="Top" BorderThickness="1" BorderBrush="Black"/>
    </Grid>
</Window>
