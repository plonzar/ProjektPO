<Window x:Class="ProjektPO.EditPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektPO"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Closing="EditPassword_Closing"
        ResizeMode="NoResize"
        Title="Edit Password" Height="200" Width="300">
    <Grid Height="172" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="294">
        <PasswordBox x:Name="new_password" PasswordChar="*" Margin="32,20,22,122" BorderThickness="1" BorderBrush="Black" FontSize="18" RenderTransformOrigin="0.529,0.6"/>
        <Button x:Name="confirm" Content="Confirm" Background="GhostWhite" BorderBrush="Black" FontSize="18" Margin="82,73,72,69" Click="confirm_Click" Height="30"/>
        <Button x:Name="return" Height="30" Content="Return" Background="GhostWhite" BorderBrush="Black" FontSize="18" Margin="0,113,72,29" Click="return_Click" HorizontalAlignment="Right" Width="140"/>
    </Grid>
</Window>
