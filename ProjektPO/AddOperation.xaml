<Window x:Class="ProjektPO.AddOperation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektPO"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Closing="AddOperation_Closing"
        ResizeMode="NoResize"
        Title="Add Operation" Height="449" Width="300">
    <Grid Height="172" VerticalAlignment="Top" HorizontalAlignment="Right" Width="294">
        <Label Content="Category of item" FontSize="25" FontFamily="Raleway" Margin="52,4,47,129"/>
        <Label Content="Item name" FontSize="25" FontFamily="Raleway" Margin="87,72,79,55"/>
        <ComboBox  x:Name="categoriesCB" Margin="60,46,54,0"  VerticalAlignment="Top" Text="Choose category" Width="180" BorderThickness="1" BorderBrush="Black" SelectionChanged="CategoriesSelectionChanged"/>
        <ComboBox  x:Name="itemsCB" Margin="60,112,54,0"  VerticalAlignment="Top" Text="Choose category" Width="180" BorderThickness="1" BorderBrush="Black"/>
        <Label Content="Type" FontSize="14" FontFamily="Raleway" Margin="125,228,126,-83"/>
        <Button x:Name="confirm" Content="Confirm" Background="GhostWhite" BorderBrush="Black" FontSize="18" Margin="77,306,77,-164" Click="ConfirmClick" Height="30" VerticalAlignment="Top"/>
        <Button x:Name="return" Content="Return" Background="GhostWhite" BorderBrush="Black" FontSize="18" Margin="77,352,77,-210" Click="ReturnClick"/>
        <Label x:Name="dayLabel" Content="Day" FontSize="14" HorizontalAlignment="Left" Height="28" Margin="49,156,0,-12" VerticalAlignment="Top" RenderTransformOrigin="0.895,-2.893" Width="48"/>
        <Label x:Name="monthLabel" Content="Month" FontSize="14" Margin="121,156,119,-11" RenderTransformOrigin="0.37,1.259"/>
        <Label x:Name="yearLabel" Content="Year" FontSize="14" Height="43" Margin="207,156,31,-27" VerticalAlignment="Top" RenderTransformOrigin="0.053,0.413"/>
        <ComboBox x:Name="day" HorizontalAlignment="Left" Height="21" Margin="45,194,0,-43" VerticalAlignment="Top" Width="42" BorderBrush="Black" BorderThickness="1"/>
        <ComboBox x:Name="month" HorizontalAlignment="Left" Height="21" Margin="126,194,0,-43" VerticalAlignment="Top" Width="42" BorderBrush="Black" BorderThickness="1"/>
        <ComboBox x:Name="year" HorizontalAlignment="Left" Height="21" Margin="199,194,0,-43" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.291,0.81" BorderBrush="Black" BorderThickness="1"/>
        <ComboBox x:Name="type" Height="21" Margin="107,260,108,-109" VerticalAlignment="Top" RenderTransformOrigin="0.291,0.81" BorderBrush="Black" BorderThickness="1"/>
    </Grid>
</Window>
