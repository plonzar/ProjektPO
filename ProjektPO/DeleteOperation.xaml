<Window x:Class="ProjektPO.DeleteOperation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektPO"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Closing="DeleteOperation_Closing"
        ResizeMode="NoResize"
        Title="Delete Operation" Height="220" Width="300">
    <Grid Height="172" VerticalAlignment="Top" HorizontalAlignment="Right" Width="294">
        <ComboBox x:Name="categoriesCB" Margin="90,13,84,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1" SelectionChanged="CategoriesSelectionChanged"/>
        <ComboBox  x:Name="operationToDelete" Margin="60,50,54,0" VerticalAlignment="Top" Width="180" BorderThickness="1" BorderBrush="Black"/>
        <Button x:Name="confirm" Content="Confirm" Background="GhostWhite" BorderBrush="Black" FontSize="18" Margin="80,91,74,0" Click="ConfirmClick" Height="30" VerticalAlignment="Top"/>
        <Button x:Name="return" Content="Return" Background="GhostWhite" BorderBrush="Black" FontSize="18" Margin="80,131,74,11" Click="ReturnClick"/>
    </Grid>
</Window>
